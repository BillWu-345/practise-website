<p style="color: green"><%= notice %></p>

<h1>Sandwiches</h1>

<div id="sandwiches">
  <% @sandwiches.each do |sandwich| %>
    <%= render sandwich %>
    <p>
      <%= link_to "Show this sandwich", sandwich %>
      <%= button_to "Destroy this sandwich", @sandwich, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New sandwich", new_sandwich_path %>
